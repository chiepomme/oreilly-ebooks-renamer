{
  "manifest_version": 2,

  "name": "oreilly-ebooks-renamer",
  "description": "oreilly-ebooks-renamer",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["https://www.oreilly.co.jp/ebook/bookshelf"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": [
    "downloads",
    "https://www.oreilly.co.jp/ebook/bookshelf"
  ]
}